"source plugin configs
source $XDG_CONFIG_HOME/nvim/plug-config/coc.vim 
source $XDG_CONFIG_HOME/nvim/plug-config/lightline.vim 
source $XDG_CONFIG_HOME/nvim/plug-config/which-key.vim 
source $XDG_CONFIG_HOME/nvim/plug-config/startify.vim
source $XDG_CONFIG_HOME/nvim/plug-config/gitgutter.vim
source $XDG_CONFIG_HOME/nvim/plug-config/lf.vim
source $XDG_CONFIG_HOME/nvim/plug-config/ale.vim
source $XDG_CONFIG_HOME/nvim/plug-config/quickscope.vim
source $XDG_CONFIG_HOME/nvim/plug-config/markdown-preview.vim

"source plug.vim
source $XDG_CONFIG_HOME/nvim/site/autoload/plug.vim
source $XDG_CONFIG_HOME/nvim/plug.vim

"source options.vim
source $XDG_CONFIG_HOME/nvim/options.vim

"source autocmd.vim
source $XDG_CONFIG_HOME/nvim/autocmd.vim

"source vars.vim
source $XDG_CONFIG_HOME/nvim/vars.vim

"source keymaps.vim
source $XDG_CONFIG_HOME/nvim/keymaps.vim

